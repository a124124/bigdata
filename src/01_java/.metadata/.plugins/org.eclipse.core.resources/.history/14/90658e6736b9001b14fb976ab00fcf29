package com.lec.ex08_volume;

public class Speaker implements IVolume {
	private int volumeLevel;
	public Speaker() {
		// TODO Auto-generated constructor stub
	}
	
	public Speaker(int volumeLevel) {
		super();
		this.volumeLevel = volumeLevel;
	}

	@Override
	public void volumeUp() { //volumeLevel 을 1증가시키지만 100일땐 증가시키지 않는다.
		// TODO Auto-generated method stub
		volumeLevel++;
		if(volumeLevel >= SPEAKER_MAX_VOLUME) {
			volumeLevel = SPEAKER_MAX_VOLUME;
			System.out.println("볼륨이 최대치입니다.");
		}else {
			System.out.println("볼륨을 1 높혔습니다." + volumeLevel);
		}
		
	}

	@Override
	public void volumeUp(int level) { //
		// TODO Auto-generated method stub
		volumeLevel += level;
		if(volumeLevel >= SPEAKER_MAX_VOLUME) {
			volumeLevel = SPEAKER_MAX_VOLUME;
			System.out.println("볼륨이 최대치입니다.");
		}

	}

	@Override
	public void volumeDown() {
		// TODO Auto-generated method stub

	}

	@Override
	public void volumeDown(int level) {
		// TODO Auto-generated method stub

	}

}
