package com.lec.ex03_store;
// 반복작업 배열처리.
public class TestMain2 {	
	public static void main(String[] args) {
		HeadQuarterStore[] store = {
									new StoreNum1(),
									new StoreNum2(),
									new StoreNum3()
		};
