package com.lec.ex07_employee;

public abstract class Employee {
	private String name;
		
	
	public Employee(String name,int computePay) {
		this.name = name;
		
	}
	public abstract void computePay();
	
	public final int computeIncentive() {
		int pay = computePay();
		if(pay >= 3000000 ) {
			return (int)(pay * 0.05);
		}else {
			return 0;
		}
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getComputePay() {
		return computePay;
	}
	public void setComputePay(int computePay) {
		this.computePay = computePay;
	}
	
}
