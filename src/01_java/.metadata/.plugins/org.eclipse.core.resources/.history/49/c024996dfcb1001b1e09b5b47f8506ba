package com.lec.ex;
// 증강 연산자 : ++ -- 
public class Ex02 {
	public static void main(String[] args) {
		int numFirst = 10;
//		int num_first = 10;  python 스타일
		int n = numFirst++;
		++numFirst; // numFirst 값을 증가시킨다.
		System.out.println(numFirst);
		--numFirst; // numFirst 값을 감소시킨다.
		System.out.printf("n = %d, numFirst = %d\n", n, numFirst);
		n = numFirst--;
		System.out.printf("n = %d, numFirst = %d\n", n, numFirst);
		
	}
}
